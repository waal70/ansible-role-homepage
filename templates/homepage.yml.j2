services:
  homepage:
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    {% if endpoint_idx | default(0) != 0 -%}
    ports:
      - 3001:3000
    {% endif -%}
    environment:
      HOMEPAGE_ALLOWED_HOSTS: '*'
    volumes:
      - {{ homepage_target_dir }}:/app/config # Make sure your local config directory exists
      - /var/run/docker.sock:/var/run/docker.sock
    restart: unless-stopped
networks:
  default:
    external: true
    name: reverse-proxy
